{
  "manifest_version": 3,
  "name": "AI Study Side Panel",
  "version": "0.1.0",
  "description": "Side panel with Summarizer, Quiz, and Concept Explorer.",
  "permissions": ["activeTab", "scripting", "sidePanel", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": { "default_title": "Open AI Side Panel" },
  "background": { "service_worker": "background.js" },
  "side_panel": { "default_path": "sidepanel.html" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
